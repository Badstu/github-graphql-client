{
  "editor.rulers": [
    120
  ],
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "editor.formatOnSave": true,
  "javascript.validate.enable": false,
  "editor.insertSpaces": true,
  "editor.autoIndent": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false
}